<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/themes/base/style.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/rotate_0.1/rotate.js")" type="text/javascript"></script>
</head>

<body>
	<!-- Header -->
	<header>
		<span id="logo"></span>
		
		<section id="welcomeConsole">
			<span>Welcome <span id="username">Nicholas</span></span>
			<a id="messages" href="#">Messages</a>
			<a href="#">My Settings</a>
			<a href="#">Logout</a>
		</section>
	</header>
	
	<!-- Subnavigation -->
	<div id="headerSeperator">
		<div id="navigationPopout">
			<span>Navigation</span>
		</div>

		<div id="search">
			<input id="searchBox" type="text" placeholder="Search" />
		</div>
	</div>

	<!-- Primary Navigation -->
	<nav id="navigation">        
		<ul id="navigationList">                
			<li id="itemNav"><img src="themes/current/apparel_icon.png" alt="Items" />Items</li>                
			<li id="peopleNav"><img src="themes/current/person_icon.png" alt="People" />People</li>                
			<li id="contentNav"><img src="themes/current/content_icon.png" alt="Content" />Content</li>                
			<li id="socialNav"><img src="themes/current/social_icon.png" alt="Social" />Social</li>                
			<li id="securityNav"><img src="themes/current/security_icon.png" alt="Security" />Security</li>                
			<li id="systemNav"><img src="themes/current/global_icon.png" alt="System" />System</li>        
		</ul>
	</nav>

	<!-- Primary Content -->
	<div id="mainContent">
		@RenderBody()
	</div>

	<!-- Footer -->
	<footer>&nbsp;</footer>
</body>
</html>
